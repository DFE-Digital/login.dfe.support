<div class="row">
    <div class="col-6">
        <h1 class="heading-xlarge">Tokens</h1>
    </div>
</div>

<%
    const pages = locals.numberOfPages, page = locals.page
    const usersOnPage = locals.userDevices.length, usersAll = locals.totalNumberOfResults
    let lowerEndUsers = page === pages ? usersAll - usersOnPage + 1 : usersOnPage * (page-1) + 1
    const upperEndUsers = lowerEndUsers + usersOnPage - 1

    if (locals.totalNumberOfResults === 0) {
        lowerEndUsers = 0;
    }
%>

<div class="row row-spacer">
    <div class="col-6">
        <form method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>"/>
            <div class="search-field">
                <fieldset class="search-input">
                    <label for="criteria" class="vh">Search by name, serial number or organisation</label>
                    <input type="text" id="criteria" name="criteria" value="<%= criteria %>" class="form-control" placeholder="Search by name, serial number or organisation">
                </fieldset>
                <fieldset class="search-submit">
                    <button type="submit" class="button">Search</button>
                </fieldset>
            </div>
        </form>
    </div>
    <div class="col-6">

    </div>
</div>

<div class="row meta">
    <div class="col-6">
        <p>Showing <%= lowerEndUsers %> - <%= upperEndUsers %> of <b><%=locals.totalNumberOfResults%></b> tokens</p>
    </div>
    <div class="col-6">
        <% if (locals.numberOfPages > 1) { %>
        <ul class="pagination">

            <% if(locals.page > 1) { %>
                <li><a href="?criteria=<%= criteria %>&page=<%= locals.page-1 %>">Previous</a></li>
            <% } %>

            <% for (let p = 1; p <= locals.numberOfPages; p++) { %>
                <% if(p === locals.page) { %>
                    <li><span class="current"> <%= p %> </span></li>
                <% } else { %>
                    <li><a href="?criteria=<%= criteria %>&page=<%= p %>"><%= p %></a></li>
                <% } %>
            <% } %>

            <% if(locals.page !== locals.numberOfPages) { %>
                <li><a href="?criteria=<%= criteria %>&page=<%= locals.page+1 %>">Next</a></li>
            <% } %>

        </ul>
        <% } %>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <table class="data">
            <thead>
                <tr class="sortable">
                    <th scope="col" class="cwp-20">
                        <a href="?criteria=<%=criteria%>&page=<%=page%>&sort=serialnumber&sortdir=<%=sort.serialNumber.nextDirection%>"
                           class="<% if (sort.serialNumber.applied) { %>sorted dir-<%= (sort.serialNumber.nextDirection === 'desc') ? 'd' : 'a' %><% } %>"
                        >Serial Number</a></th>
                    <th scope="col" class="cwp-10">Status</th>
                    <th scope="col" class="cwp-20">Assignee</th>
                    <th scope="col" class="cwp-35">
                        <a href="?criteria=<%=criteria%>&page=<%=page%>&sort=organisation&sortdir=<%=sort.organisation.nextDirection%>"
                           class="<% if (sort.organisation.applied) { %>sorted dir-<%= (sort.organisation.nextDirection === 'desc') ? 'd' : 'a' %><% } %>"
                        >Organisation</a></th>
                    <th scope="col" class="cwp-15">
                        <a href="?criteria=<%=criteria%>&page=<%=page%>&sort=lastlogin&sortdir=<%=sort.lastLogin.nextDirection%>"
                           class="<% if (sort.lastLogin.applied) { %>sorted dir-<%= (sort.lastLogin.nextDirection === 'desc') ? 'd' : 'a' %><% } %>"
                        >Last login</a>
                        </th>
                </tr>
            </thead>
            <tbody>
            <% if(locals.userDevices.length === 0 && locals.criteria) { %>
                <tr>
                    <td colspan="5"><span class="empty-state">No users found</span></td>
                </tr>
            <% } %>
            <% for (let i = 0; i < locals.userDevices.length; i++) { %>
                <tr>
                    <td><a href="/userDevices/<%=userDevices[i].device.serialNumber%>/<%=userDevices[i].id%>%>"><%= userDevices[i].device.serialNumberFormatted %></a></td>
                    <td><%= userDevices[i].device.status %></td>
                    <td><%= userDevices[i].name %></td>
                    <td>
                    <% if(userDevices[i].organisation) { %>
                        <%= userDevices[i].organisation.name %>
                    <% }else { %>
                        Unknown
                    <% } %>
                    </td>
                    <td>
                    <% if(locals.userDevices[i].lastLogin) { %>
                        <%= locals.moment(locals.userDevices[i].lastLogin).fromNow() %>
                    <% } else { %>
                        Never
                    <% } %>
                    </td>
                </tr>
            <% } %>
            </tbody>
        </table>
    </div>
</div>

<div class="row meta">
    <div class="col-12">
        <% if (locals.numberOfPages > 1) { %>
        <ul class="pagination">

            <% if(locals.page > 1) { %>
            <li><a href="?criteria=<%= criteria %>&page=<%= locals.page-1 %>">Previous</a></li>
            <% } %>

            <% for (let p = 1; p <= locals.numberOfPages; p++) { %>
            <% if(p === locals.page) { %>
            <li><span class="current"> <%= p %> </span></li>
            <% } else { %>
            <li><a href="?criteria=<%= criteria %>&page=<%= p %>"><%= p %></a></li>
            <% } %>
            <% } %>

            <% if(locals.page !== locals.numberOfPages) { %>
            <li><a href="?criteria=<%= criteria %>&page=<%= locals.page+1 %>">Next</a></li>
            <% } %>

        </ul>
        <% } %>
    </div>
</div>