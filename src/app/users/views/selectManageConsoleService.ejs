
<div class="govuk-width-container">
  <div class="row">
    <% if (locals.flash.info) { %>
      <div class="govuk-notification-banner govuk-notification-banner--success" role="alert" aria-labelledby="govuk-notification-banner-title" data-module="govuk-notification-banner">
        <div class="govuk-notification-banner__header">
          <h2 class="govuk-notification-banner__title" id="govuk-notification-banner-title">
            Success
          </h2>
        </div>
        <div class="govuk-notification-banner__content">
          <h3 class="govuk-notification-banner__heading">
            <%= locals.flash.info[0] %>
          </h3>
          <p class="govuk-body"><%= locals.flash.info[1] %></p>
        </div>
      </div>
    <% } %>
</div>
  <div class="govuk-!-margin-top-9">
    <span class="govuk-caption-xl"><%= user.name %></span>
    <h1 class="govuk-heading-xl govuk-!-margin-top-0">Manage console roles</h1>
  </div>
  <div>
    <dl class="govuk-summary-list govuk-summary-list--no-border">
      <div class="govuk-summary-list__row govuk-!-margin-0">
        <dt class="govuk-summary-list__key govuk-!-padding-0">
          Email:
        </dt>
        <dd class="govuk-summary-list__value govuk-!-padding-0">
          <%= user.email %>
        </dd>
      </div>
      <div class="govuk-summary-list__row">
        <dt class="govuk-summary-list__key govuk-!-padding-0">
          Last login:
        </dt>
        <dd class="govuk-summary-list__value govuk-!-padding-0">
          <%= locals.user.lastLogin ? locals.moment(locals.user.lastLogin).format('DD MMM YYYY, HH:mm:ss') : 'Never' %>
        </dd>
      </div>
      <div class="govuk-summary-list__row">
        <dt class="govuk-summary-list__key govuk-!-padding-0">
          Account status:
        </dt>
        <dd class="govuk-summary-list__value govuk-!-padding-0">
          <%= user.status.description %>
        </dd>
      </div>
      <div class="govuk-summary-list__row">
        <dt class="govuk-summary-list__key govuk-!-padding-0">
          Number of logins in last 12 months:
        </dt>
        <dd class="govuk-summary-list__value govuk-!-padding-0">
          <%= user.loginsInPast12Months.successful %>
        </dd>
      </div>
    </dl>
  </div>
  <div class="col-8">
      <table class="govuk-table">
          <thead class="govuk-table__head">
            <tr class="govuk-table__row">
              <th scope="col" class="govuk-table__header">Service</th>
              <th scope="col" class="govuk-table__header">Service type</th>
              <th scope="col" class="govuk-table__header">Visibility</th>
            </tr>
          </thead>
          <tbody class="govuk-table__body">
            <% for(let i=0; i<services.services.length; i++ ) {%>
            <tr class="govuk-table__row">
              <th scope="row" class="govuk-table__header"><a href="add-manage-console-roles/<%= services.services[i].id %>"><%= services.services[i].name %></a></th>
              <td class="govuk-table__cell"><%= services.services[i].isIdOnlyService ? 'ID only' : 'Role'%></td>
              <td class="govuk-table__cell"><%= services.services[i].isHiddenService ? 'Hidden' : 'Visible'%></td>
            </tr>
            <% } %>
          </tbody>
        </table>
  </div>
</div>