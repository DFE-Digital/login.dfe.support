<div class="row">
    <div class="col-12">
        <h1 class="heading-xlarge">
            Assign token to <%=user.firstName%> <%=user.lastName%>
        </h1>
    </div>
</div>
<div class="row">
    <div class="col-6">
        <form method="post" id="form-assign-digipass">
            <input type="hidden" name="_csrf" value="<%=csrfToken%>"/>
            <fieldset>
                <legend><p>Please enter the serial number found on the back of the token youâ€™d like to add to the user account.</p></legend>
                <div class="form-group <%= (locals.validationMessages.serialNumber !== undefined) ? 'form-group-error' : '' %>">
                    <label class="form-label" for="serialNumber">Token serial number</span> </label>
                    <% if (locals.validationMessages.serialNumber !== undefined) { %>
                    <p class="error-message" id="validation-serialNumber"><%=locals.validationMessages.serialNumber%></p>
                    <% } %>
                    <input class="form-control full-width" id="serialNumber" name="serialNumber" type="text"
                           <% if (locals.validationMessages.serialNumber !== undefined) { %>aria-invalid="true" aria-describedby="validation-serialNumber"<% } %>
                           value="<%=serialNumber%>">
                </div>
            </fieldset>
            <div class="form-submit submit-buttons">
                <% if(locals.isExistingUser) {%>
                    <a href="/users/<%=locals.user.id%>" class="button button-secondary">&#8810; Go back</a>
                <% } else { %>
                    <a href="new-k2s-user" class="button button-secondary">&#8810; Go back</a>
                <% } %>

                <button type="submit" class="button">Add</button>
                <a href="../" class="button button-secondary">Cancel</a>
            </div>
        </form>
    </div>
    <div class="col-6">
        <img src="<%= locals.urls.assets %>/images/token-serial.svg" class="responsive spacing" alt="Token">
    </div>
</div>
